<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:src="@drawable/brazil"
          android:scaleType="centerInside">

        </ImageButton>

        <ImageButton
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:src="@drawable/international"
            android:scaleType="fitCenter">

        </ImageButton>

        <ImageButton
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:src="@drawable/esp"
            android:scaleType="fitCenter">

        </ImageButton>

    </LinearLayout>
    
    
    <RelativeLayout
        android:orientation="horizontal"
        app:layout_editor_absoluteY="190dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/btn_bg">

        <Button
            android:id="@+id/btn1"
            android:layout_width="137dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/btn"
            android:drawableRight="@drawable/star1"
            android:text="Beginner \n Level"
            android:textColor="@color/white"
            android:textSize="13dp"></Button>

        <Button
            android:id="@+id/btn2"
            android:layout_toRightOf="@+id/btn1"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="easy \n Level"
            android:textSize="13dp"
            android:backgroundTint="@color/easy"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/btn3"
            android:layout_toRightOf="@+id/btn2"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="Middle \n Level"
            android:textSize="13dp"
            android:backgroundTint="@color/btn"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/btn4"
            android:layout_toRightOf="@+id/btn3"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="hard \n Level"
            android:textSize="13dp"
            android:backgroundTint="@color/btn"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/btn5"
            android:layout_toRightOf="@+id/btn4"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="Advanced \n Level"
            android:textSize="13dp"
            android:backgroundTint="@color/btn"
            android:textColor="@color/white">
        </Button>

        <Button
            android:id="@+id/btn6"
            android:layout_toRightOf="@+id/btn5"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="Expert \n Level"
            android:textSize="13dp"
            android:backgroundTint="@color/btn"
            android:textColor="@color/white">
        </Button>

    </RelativeLayout>




    

</androidx.constraintlayout.widget.ConstraintLayout>












